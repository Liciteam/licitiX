
/* Showcase */
#showcase{
	min-height: 300px;
	background: url('../images/showcase.jpg') no-repeat 0 -20px;
	background-attachment: fixed;

    
    background-size: cover;
	color: #FFFFFF;
}

#showcase h1{
	margin-top: 4%;
	width: 100%;
	font-size: 46px;
	margin-bottom: 30px;
}



#searchbar input[type="search"]{
	float:left;
	height: 40px;
    width: 40%;
    background-color: #FFFFFF;
    padding: 10px;
    -webkit-border-radius: 3px 0px 0px 3px;
    -moz-border-radius: 3px 0px 0px 3px;
    border-radius: 3px 0px 0px 3px;
}

.search-button{
	height: 40px;
	background: rgba(249,137,39,1);
	border: 0;
	padding: 0 20px 0 20px;
	color: #FFFFFF;
	-webkit-border-radius: 0px 3px 3px 0px;
    -moz-border-radius: 0px 3px 3px 0px;
    border-radius: 0px 3px 3px 0px;
}


/* Boxes */
#boxes{
	margin-top: 20px;
}

#boxes .box{
	float:left;
	text-align: center;
	width: 30%;
	padding: 0px 20px 0px;
}

#boxes .box img{
	float:left;
	padding-right: 10px;
	width:130px;
}

#boxes .box h3, #boxes .box p{
	text-align: left;
	width:auto;
}


/* Footer */
footer{
	padding: 10px;
	margin-top: 20px;
	color: #FFFFFF;
	background-color: rgba(197,137,39,1);
	text-align: center;
}

/* Media Queries */
@media only screen and (max-width: 767px){

	#showcase h1{
		margin-top: 7%;
		width: 100%;
		font-size: 37px;
		margin-bottom: 39px;
	}

}

